<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
         <%= render 'books/mypage_newpost', book: @newbook, user: @user %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <th><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></th>
                <th><%= link_to book.title, book_path(book.id) %></th>
                <th><%= book.body %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
            </div>
        </div>
    </div>
</div>