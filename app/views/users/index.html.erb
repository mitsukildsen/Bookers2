<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
               <%= render 'books/mypage_newpost', book: @newbook, user: @user %>
			</div>
			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
						    <tr>
						    	<th><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></th>
						    	<th><%= user.name %></th>
						    	<th><%= link_to 'Show', user_path(user.id) %></th>
						    </tr>
						<% end %>
					</tbody>
				</table>
            </div>
        </div>
    </div>
</div>